storable attribute value: Text;
storable category Stuff(name, value);

widget IncludeInFetchOneIsSupportedPage extends ReactWidget {
	
	method componentDidMount() {
		s = Stuff(name="John", value="DeMurga");
		store(s);
		forceRender();
	}
	
	Html method render() {
		stuff = fetch one ( Stuff ) where ( name == "John" ) include ( value );
		return <div id="root">{stuff is null ? "null" : stuff.text}</div>;
	}
}
